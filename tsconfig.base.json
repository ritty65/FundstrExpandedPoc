{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@yourname/scheduler-core": ["packages/scheduler-core/src"],
      "@yourname/scheduler-service": ["packages/scheduler-service/src"],
      "@yourname/scheduler-web-ui": ["packages/web-ui/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
